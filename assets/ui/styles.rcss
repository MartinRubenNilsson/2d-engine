* {
	font-family: alagard;
	font-size: 5vh;
	line-height: 1.2em;
	color: white;
}

.fullscreen-container {
	position: fixed;
	width: 100vw;
	height: 100vh;
}

.textbox {
	position: absolute;
	width: 22em;
	height: 2.2em;
	padding: 1em;
	background: black;
	border: 0.12em;
	left: 50%;
    transform: translateX(-50%);
    bottom: 1em;
}
