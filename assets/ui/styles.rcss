@spritesheet 
{
	src: iron_helmet.png;
	
	iron-helmet: 0px 0px 32px 32px;
}

* {
	font-family: alagard;
	font-size: 8dp;
	line-height: 10dp;
	color: white;
}

.fullscreen-container {
	position: fixed;
	width: 100vw;
	height: 100vh;
}

.textbox {
	position: absolute;
	width: 200dp;
	height: 32dp;
	padding: 6dp;
	background: black;
	border: 1dp;
	left: 50%;
    transform: translateX(-50%);
    bottom: 0.5em;
}

.textbox > img {
	width: 32dp;
	height: 32dp;
}