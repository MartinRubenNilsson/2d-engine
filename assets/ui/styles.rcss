* {
	font-family: alagard;
	font-size: 8dp;
	line-height: 1.2em;
	color: white;
}

.fullscreen-container {
	position: fixed;
	width: 100vw;
	height: 100vh;
}

.textbox {
	position: absolute;
	width: 25em;
	height: 3.4em;
	padding: 1em;
	background: black;
	border: 1dp;
	left: 50%;
    transform: translateX(-50%);
    bottom: 0.5em;
}
