<root BTCPP_format = "4" BTCPP_format="4">
    <TreeNodesModel>
        <Action ID="ApproachPlayer">
            <input_port name="speed" type="float" default="0.000000">The movement speed to use</input_port>
        </Action>
        <Action ID="ConsoleExecute">
            <input_port name="command" type="std::string" default="">The command line to execute</input_port>
        </Action>
        <Action ID="ConsoleLog">
            <input_port name="message" type="std::string" default="">The message to log</input_port>
        </Action>
        <Action ID="ConsoleLogError">
            <input_port name="message" type="std::string" default="">The message to log</input_port>
        </Action>
        <Action ID="DestroySelf"/>
        <Condition ID="IsPlayerInRange">
            <input_port name="radius" type="float" default="0.000000">The radius of the range</input_port>
        </Condition>
        <Action ID="SetLifeSpan">
            <input_port name="life_span" type="float" default="0.000000">The remaining life span</input_port>
        </Action>
        <Action ID="StopMoving"/>
    </TreeNodesModel>
</root>
