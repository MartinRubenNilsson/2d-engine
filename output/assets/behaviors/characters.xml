<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="enemy">
    <Fallback>
      <Sequence>
        <IsPlayerInRange radius="7"/>
        <ApproachPlayer speed="3"/>
      </Sequence>
      <StopMoving/>
    </Fallback>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="ApproachPlayer">
      <input_port name="speed"
                  type="float">The movement speed to use</input_port>
    </Action>
    <Condition ID="IsPlayerInRange">
      <input_port name="radius"
                  type="float">The radius of the range</input_port>
    </Condition>
    <Action ID="StopMoving"/>
  </TreeNodesModel>

</root>
