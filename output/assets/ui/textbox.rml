<rml>
<head>
	<link type="text/rcss" href="styles.rcss"/>
	<link type="text/rcss" href="spritesheets.rcss"/>
</head>
<body data-model="data_model"
	data-event-keydown="on_textbox_keydown">
	<div class="fullscreen-container">
		<div class="textbox">
			<img class="textbox-sprite"
				data-if="textbox_sprite_is_set"
				data-attr-sprite="textbox_sprite"/>
			<p class="textbox-text"
				data-rml="textbox_text"></p>
		</div>
	</div>
</body>
</rml>